    <body> 
        <!-- 헤더 -->
        <section id="header">
            <a href="#"><img src ="../img/logo.png" class="logo"></a>
            <div>
                <ui id="navbar">
                </ui>
            </div>
        </section>

        <!-- 사이드바 -->
        <aside class="side-bar">
            <section class="side-bar__icon-box">
              <section class="side-bar__icon-1">
                <div></div>
                <div></div>
                <div></div>
              </section>
            </section>
            <ul>
              <li>
                <a href="managerMain">회원관리</a>
              </li>
              <li>
                <a href="managerevent">이달의 음료관리</a>
              </li>
              <li>
                <a href="#">주문관리</a>
