              <li>
                <a href="#">신고관리</a>
              </li>
              <li>
                <a href="#">재고관리</a>
              </li>

            </ul>
          </aside>


              <!-- 검색창 -->
              <div class="search">
              <input type="text" id="searchInput" placeholder="검색어를 입력하세요">

              <!-- 검색 버튼 -->
              <button onclick="search()">검색</button>

              <!-- 네 개의 버튼 -->
              <br> <!-- 버튼을 아래로 내리기 위해 줄 바꿈 추가 -->
              <div id="select">
              <button onclick="buttonClicked(1)">버튼 1</button>
              <button onclick="buttonClicked(2)">버튼 2</button>
              <button onclick="buttonClicked(3)">버튼 3</button>
              <button onclick="buttonClicked(4)">버튼 4</button>
              </div>
              <!-- 검색 결과 또는 다른 내용을 표시할 공간 -->
              <div id="resultArea"></div>
              </div>

              <!-- 프로필 -->
              <section class="profile">
              <div class="wrapper">
                <div class="img-area">
                  <div class="inner-area">
                    <img src="../img/person.png" alt="">
                  </div>
                </div>
                <div class="icon pen"><a href="#"><i class="fa-solid fa-pen-to-square"></i></a></div>
                
                <div class="social-icons">
                  <a href="#" class="medal"><i class="fa-solid fa-medal"></i></a>
                </div>
                    <div class="name">오준영</div>
                <div class="about">팔로워수 넣는칸</div>
                  <!-- <a href="#" class="twitter"><i class="fab fa-twitter"></i></a>
                  <a href="#" class="insta"><i class="fab fa-instagram"></i></a>
                  <a href="#" class="yt"><i class="fab fa-youtube"></i></a> -->
                
                <div class="buttons">
                  <!-- <button>Message</button> -->
                  <button><i class="fa-solid fa-bookmark"></i> Subscribe</button>
                </div>
                <div class="social-share">
                  <div class="row">
                    <i class="far fa-heart"></i>
                    <i class="icon-2 fas fa-heart"></i>
                    <span>20.4k</span>
                  </div>
                  <div class="row">
                    <!-- <i class="far fa-comment"></i> -->
                    <i class="fa-solid fa-check"></i>
                    <span>14.3k</span>
                  </div>
                  <div class="row">
                    <i class="fa-solid fa-coins"></i>
                    <span>12.8k</span>
                  </div>
                </div>
              </div>
            </section>





              <!-- 간단한 스크립트 예시 (필요에 따라 수정 가능) -->
              <script>
                function search() {
                  // 검색 로직을 여기에 추가
                  var searchInputValue = document.getElementById("searchInput").value;
                  document.getElementById("resultArea").innerHTML = "검색 결과: " + searchInputValue;
                }

                function buttonClicked(buttonNumber) {
                  // 각 버튼 클릭 시의 로직을 여기에 추가
                  document.getElementById("resultArea").innerHTML = "버튼 " + buttonNumber + "이 클릭되었습니다.";
                }
              </script>

            </body>


        </html>
